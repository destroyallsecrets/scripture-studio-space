
# Fix for optional dependency issues
shamefully-hoist=true

# Disable binary validation to prevent rollup platform-specific errors
rollup-plugin-typescript2-binary-validation=false
node-linker=hoisted

# Skip platform-specific optional dependencies
omit=optional

# Explicitly ignore platform-specific rollup bindings
ignore-platform-specific=true

# Force ignore specific packages
strict-peer-dependencies=false
legacy-peer-deps=true
